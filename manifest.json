{
  "manifest_version": 3,
  "name": "YouTube Full Page Reloader",
  "version": "1.0",
  "description": "Force un rechargement complet de la page lors d'un clic sur un lien vid√©o YouTube.",
  "icons": {
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "host_permissions": [
    "*://*.youtube.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "youtubefullreloader@creeper.fr",
      "strict_min_version": "139.0"
    }
  }
}
